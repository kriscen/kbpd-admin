# 开发环境配置
NODE_ENV = 'development'

# 应用标题
VITE_APP_TITLE = 'kbpd平台'

# 开发环境下的API地址
VITE_APP_BASE_API = '/api'

# 登录模式：mock | oauth2
# mock: 使用模拟数据进行登录
# oauth2: 使用OAuth2认证中心进行登录
VITE_LOGIN_MODE = 'oauth2'

# OAuth2认证中心配置（当VITE_LOGIN_MODE为oauth2时生效）
VITE_OAUTH2_AUTH_URL = 'https://auth.example.com/oauth2/authorize'
VITE_OAUTH2_TOKEN_URL = 'https://auth.example.com/oauth2/token'
VITE_OAUTH2_CLIENT_ID = 'your-client-id'
VITE_OAUTH2_REDIRECT_URI = 'http://localhost:5173/auth/callback'
VITE_OAUTH2_SCOPE = 'openid profile email'