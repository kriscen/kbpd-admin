# 生产环境配置
NODE_ENV = 'production'

# 生产环境下的API地址
VITE_APP_BASE_API = 'https://api.example.com'

# 登录模式：mock | oauth2
# mock: 使用模拟数据进行登录（一般生产环境不建议使用）
# oauth2: 使用OAuth2认证中心进行登录
VITE_LOGIN_MODE = 'oauth2'

# OAuth2认证中心配置
VITE_OAUTH2_AUTH_URL = 'https://auth.example.com/oauth2/authorize'
VITE_OAUTH2_TOKEN_URL = 'https://auth.example.com/oauth2/token'
VITE_OAUTH2_CLIENT_ID = 'your-production-client-id'
VITE_OAUTH2_REDIRECT_URI = 'https://your-domain.com/auth/callback'
VITE_OAUTH2_SCOPE = 'openid profile email'